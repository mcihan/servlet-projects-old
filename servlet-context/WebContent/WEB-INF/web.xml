<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xmlns="http://java.sun.com/xml/ns/javaee" 
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
		 id="WebApp_ID" 
		 version="3.0">
  
  <servlet>
    <servlet-name>ServletA_Name</servlet-name>
    <servlet-class>ServletA</servlet-class>  
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ServletA_Name</servlet-name>
    <url-pattern>/ServletA_Url</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>ServletB_Name</servlet-name>
    <servlet-class>ServletB</servlet-class>  
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ServletB_Name</servlet-name>
    <url-pattern>/ServletB_Url</url-pattern>
  </servlet-mapping>
  
  <context-param>
    <param-name>driver</param-name>
    <param-value>oracle.jdbc.driver.OracleDriver</param-value>
  </context-param>
  
  <context-param>
    <param-name>userName</param-name>
    <param-value>developera</param-value>
  </context-param>
  
  <context-param>
    <param-name>password</param-name>
    <param-value>java</param-value>
  </context-param>
  
</web-app>